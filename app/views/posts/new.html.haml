.container
  .form
    = form_with(model: @post, url: posts_path, method: 'post', local: true) do |f|
      .form_top
        .form_top_left
          = link_to :back do
            %p= 'Cance'
  
        .form_top_right
          = f.submit 'Post'

      .form_body
        .form_body_left
          = image_tag current_user.avatar_image
        .form_body_right
          = current_user.name
      
      .form_content
        = f.text_area :content, placeholder: 'What\'s on your mind?', class: 'input'
        %hr/

      .form_img
        = f.label :images, "+Album", class: 'label'
        = f.file_field :images, multiple: true
          