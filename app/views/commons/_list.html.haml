.follow
  .follow_top
    .follow_top_back
      = link_to 'javascript:history.back()' do
        = image_tag 'back.png'
    .follow_top_status
      - if current_page?(account_followerslists_path)
        Followers
      - else
        Followings

  - follows.each do |follow|
    = link_to account_path(follow) do
      .follow_body
        .follow_body_avatar
          = image_tag follow.avatar_image

        .follow_body_name
          = follow.display_name
    %hr/


